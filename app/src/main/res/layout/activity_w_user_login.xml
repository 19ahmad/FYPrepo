<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".externalService.User_login">

    <ImageView
        android:id="@+id/ac"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:src="@drawable/account_circle"
        android:layout_gravity="center"
        android:layout_margin="40dp"
        android:contentDescription="Profile Image"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:weightSum="3"
        >

        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Email"
            app:startIconDrawable="@drawable/email"
            app:startIconTint="@color/buttonColor"
            app:endIconMode="clear_text"
            app:boxStrokeColor="@color/buttonColor"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/esLoginEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textColor="@color/buttonColor"
                android:drawablePadding="10dp"
                />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/buttonColor"
        app:startIconDrawable="@drawable/password"
        app:startIconTint="@color/buttonColor"
        app:boxStrokeColor="@color/buttonColor"
        android:layout_margin="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:drawablePadding="10dp"/>

    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="@color/white"
        android:elevation="10dp"
        android:layout_margin="10dp"
        android:background="@drawable/round_shape_button"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="2.5dp">
        <com.google.android.material.checkbox.MaterialCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wrememberMe"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="7.5dp"
            android:text="Remember me"
            android:textAllCaps="true"
            android:textColor="@color/buttonColor"/>
        <TextView
            android:id="@+id/text0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are you new here? "
            android:layout_marginStart="15dp"

            />

        <TextView
            android:id="@+id/sign_Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:textColor="@color/buttonColor"
            />
    </LinearLayout>

</LinearLayout>