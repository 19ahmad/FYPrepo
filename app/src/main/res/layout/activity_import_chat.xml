<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".externalService.importChat">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/nullItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_layout"
        android:text=""
        android:textColor="@color/buttonColor"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/import_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:rippleColor="@color/buttonColor"
        android:src="@drawable/file_upload"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="Upload File"
        />

</RelativeLayout>