<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".gameModule.SignUp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textColor="@color/buttonColor"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:startIconDrawable="@drawable/user_name"
        app:startIconTint="@color/buttonColor"
        android:layout_marginTop="15dp"
        app:boxStrokeColor="@color/buttonColor"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <EditText
            android:id="@+id/fullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:ems="10"
            android:inputType="text"
            android:textColor="@color/buttonColor"
            android:textColorHint="@color/buttonColor"
            android:padding="10dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:startIconDrawable="@drawable/email"
        app:startIconTint="@color/buttonColor"
        android:layout_marginTop="10dp"
        app:boxStrokeColor="@color/buttonColor"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <EditText
            android:id="@+id/eamil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:ems="10"
            android:inputType="text"

            android:textColor="@color/buttonColor"
            android:textColorHint="@color/buttonColor"
            android:padding="10dp"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:layout_marginTop="10dp"
            android:focusable="true"
            app:startIconDrawable="@drawable/phone_number"
        app:startIconTint="@color/buttonColor"
            android:focusableInTouchMode="true"
            app:boxStrokeColor="@color/buttonColor"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:maxLength="10"
                android:textColor="@color/buttonColor"
                android:textColorHint="@color/buttonColor"
                android:padding="10dp"
                />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/buttonColor"
        app:startIconDrawable="@drawable/password"
        app:startIconTint="@color/buttonColor"
        android:focusableInTouchMode="true"
        android:layout_marginTop="10dp"
        app:boxStrokeColor="@color/buttonColor"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="@color/buttonColor"
            android:textColorHint="@color/buttonColor"
            android:padding="10dp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date of Birth"
        android:layout_marginTop="10dp"
        android:focusable="true"
        app:startIconDrawable="@drawable/calender"
        app:startIconTint="@color/buttonColor"
        android:focusableInTouchMode="true"
        app:boxStrokeColor="@color/buttonColor"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/DOB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:textColor="@color/buttonColor"
            android:textColorHint="@color/buttonColor"
            android:padding="10dp"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender:"
             />

        <RadioButton
            android:id="@+id/genderMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:outlineSpotShadowColor="@color/buttonColor"
            android:layout_marginLeft="10dp"/>
        <RadioButton
            android:id="@+id/genderFeMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:outlineSpotShadowColor="@color/buttonColor"
            android:layout_marginLeft="10dp"/>

    </RadioGroup>
    <Button
        android:id="@+id/button_signup"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Sign up"
        android:textColor="@color/white"
        android:elevation="10dp"
        android:background="@drawable/rounded_button_1"
        />
</LinearLayout>